{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "lib": ["es2015", "es2016", "esnext.asynciterable"],
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["build"]
}
