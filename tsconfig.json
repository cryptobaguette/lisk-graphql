{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "noEmit": true,
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["es2015", "es2016", "esnext.asynciterable"],
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["build"]
}
