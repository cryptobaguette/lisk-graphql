{
  "name": "lisk-graphql",
  "version": "0.0.1",
  "main": "src/index.js",
  "repository": "https://github.com/cryptobaguette/lisk-graphql.git",
  "license": "MIT",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.ts",
    "prettier": "prettier --write '**/*.{js,md}'",
    "lint": "eslint 'src' '__tests__'",
    "test": "yarn lint && yarn testonly",
    "testonly": "jest --forceExit",
    "postinstall": "patch-package"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/testUtils"
    ]
  },
  "dependencies": {
    "apollo-server-express": "^1.3.6",
    "bignumber.js": "=4.0.2",
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-query-int": "=1.0.1",
    "express-rate-limit": "^2.11.0",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.2",
    "ip": "=1.1.5",
    "join-monster": "^2.0.16",
    "join-monster-graphql-tools-adapter": "^0.0.3",
    "knex": "^0.14.6",
    "lisk-elements": "^1.0.0",
    "lodash": "^4.17.11",
    "pg": "^7.6.0",
    "sqlstring": "^2.3.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/express-rate-limit": "^2.9.3",
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.9",
    "@types/knex": "^0.14.26",
    "@types/lodash": "^4.14.117",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.9.1",
    "graphql-request": "^1.8.2",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.0",
    "nodemon": "^1.18.5",
    "patch-package": "^5.1.1",
    "postinstall-postinstall": "^1.0.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  }
}
