{
  "name": "lisk-graphql",
  "version": "0.0.1",
  "main": "src/index.js",
  "repository": "https://github.com/cryptobaguette/lisk-graphql.git",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./build",
    "prettier": "prettier --write '**/*.{js,ts,md}'",
    "generate-typings": "gql-gen",
    "lint": "tslint -c tslint.json '{src,__tests__}/**/*.ts' --exclude 'src/types/graphql.ts'",
    "test": "yarn lint && yarn testonly",
    "testonly": "jest",
    "postinstall": "patch-package"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/testUtils"
    ]
  },
  "dependencies": {
    "@liskhq/lisk-constants": "1.2.0",
    "apollo-server": "2.5.0",
    "bignumber.js": "8.1.1",
    "dotenv": "^6.1.0",
    "graphql": "0.13.2",
    "graphql-tools": "^3.0.2",
    "ip": "=1.1.5",
    "join-monster": "2.1.0",
    "join-monster-graphql-tools-adapter": "0.0.3",
    "knex": "0.16.5",
    "lisk-elements": "1.1.3",
    "lodash": "4.17.11",
    "patch-package": "6.1.2",
    "pg": "7.11.0",
    "sqlstring": "2.3.1",
    "validator": "10.11.0"
  },
  "devDependencies": {
    "@types/graphql": "14.2.0",
    "@types/jest": "24.0.12",
    "@types/knex": "0.15.1",
    "@types/lodash": "4.14.126",
    "@types/node": "10.12.10",
    "@types/sqlstring": "2.2.1",
    "@types/validator": "9.4.3",
    "graphql-code-generator": "0.14.1",
    "graphql-codegen-typescript-resolvers-template": "0.14.1",
    "graphql-request": "1.8.2",
    "husky": "2.2.0",
    "is-ci": "2.0.0",
    "jest": "24.8.0",
    "lint-staged": "8.1.6",
    "nodemon": "1.19.0",
    "postinstall-postinstall": "2.0.0",
    "prettier": "1.17.0",
    "ts-jest": "24.0.2",
    "ts-node": "7.0.1",
    "tsconfig-paths": "3.7.0",
    "tscpaths": "0.0.6",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.4.5"
  }
}
