{
  "name": "lisk-graphql",
  "version": "0.0.1",
  "main": "src/index.js",
  "repository": "https://github.com/cryptobaguette/lisk-graphql.git",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./build",
    "prettier": "prettier --write '**/*.{js,ts,md}'",
    "generate-typings": "gql-gen --schema http://localhost:3000/graphql --template graphql-codegen-typescript-resolvers-template --out ./src/types/graphql.ts",
    "lint": "eslint 'src' '__tests__'",
    "test": "yarn lint && yarn testonly",
    "testonly": "jest",
    "postinstall": "patch-package"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/testUtils"
    ]
  },
  "dependencies": {
    "apollo-server": "2.2.1",
    "bignumber.js": "=4.0.2",
    "dotenv": "^6.1.0",
    "graphql": "0.13.2",
    "graphql-tools": "^3.0.2",
    "ip": "=1.1.5",
    "join-monster": "2.1.0",
    "join-monster-graphql-tools-adapter": "0.0.3",
    "knex": "0.15.2",
    "lisk-elements": "1.0.0",
    "lodash": "4.17.11",
    "patch-package": "5.1.1",
    "pg": "7.6.1",
    "sqlstring": "2.3.1",
    "validator": "10.9.0"
  },
  "devDependencies": {
    "@types/graphql": "14.0.3",
    "@types/jest": "23.3.9",
    "@types/knex": "0.15.0",
    "@types/lodash": "4.14.118",
    "@types/node": "10.12.5",
    "@types/sqlstring": "2.2.0",
    "@types/validator": "9.4.2",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.9.1",
    "graphql-code-generator": "0.13.0",
    "graphql-codegen-typescript-resolvers-template": "0.13.0",
    "graphql-request": "1.8.2",
    "husky": "1.1.3",
    "is-ci": "1.2.1",
    "jest": "23.6.0",
    "lint-staged": "8.0.4",
    "nodemon": "1.18.6",
    "postinstall-postinstall": "1.0.0",
    "prettier": "1.15.2",
    "ts-jest": "23.10.4",
    "ts-node": "7.0.1",
    "tsconfig-paths": "3.7.0",
    "tscpaths": "0.0.6",
    "typescript": "3.1.6"
  }
}
