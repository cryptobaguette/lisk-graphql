{
  "name": "lisk-graphql",
  "version": "0.0.1",
  "main": "src/index.js",
  "repository": "https://github.com/cryptobaguette/lisk-graphql.git",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon src/index.ts",
    "check-types": "tsc",
    "build": "babel src --out-dir build --extensions \".ts\"",
    "prettier": "prettier --write '**/*.{js,ts,md}'",
    "generate-typings": "gql-gen",
    "lint": "eslint '{src,__tests__}/**/*.ts'",
    "test": "yarn lint && yarn check-types && yarn build && yarn testonly",
    "testonly": "jest",
    "deploy": "now --target production",
    "postinstall": "patch-package"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "jest"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": 0
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/__tests__/testUtils/setup.ts"
    ],
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/testUtils"
    ]
  },
  "dependencies": {
    "@liskhq/lisk-constants": "1.2.0",
    "@liskhq/lisk-cryptography": "2.0.0",
    "apollo-server": "2.5.0",
    "apollo-server-micro": "2.5.0",
    "bignumber.js": "8.1.1",
    "dotenv": "8.0.0",
    "graphql": "0.13.2",
    "graphql-tools": "3.0.2",
    "ip": "1.1.5",
    "join-monster": "2.1.0",
    "join-monster-graphql-tools-adapter": "0.0.3",
    "knex": "0.16.5",
    "lodash": "4.17.11",
    "micro": "9.3.4",
    "patch-package": "6.1.2",
    "pg": "7.11.0",
    "sqlstring": "2.3.1",
    "validator": "10.11.0"
  },
  "devDependencies": {
    "@babel/cli": "7.4.4",
    "@babel/core": "7.4.4",
    "@babel/node": "7.2.2",
    "@babel/preset-env": "7.4.4",
    "@babel/preset-typescript": "7.3.3",
    "@graphql-codegen/cli": "1.1.3",
    "@graphql-codegen/typescript-resolvers": "1.1.3",
    "@liskhq/lisk-api-client": "2.0.0",
    "@types/dotenv": "6.1.1",
    "@types/got": "9.4.4",
    "@types/graphql": "14.2.0",
    "@types/jest": "24.0.13",
    "@types/knex": "0.16.1",
    "@types/lodash": "4.14.126",
    "@types/node": "12.0.1",
    "@types/sqlstring": "2.2.1",
    "@types/validator": "10.11.0",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "@typescript-eslint/parser": "1.9.0",
    "babel-plugin-module-resolver": "3.2.0",
    "babel-polyfill": "6.26.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-plugin-jest": "22.5.1",
    "eslint-plugin-prettier": "3.1.0",
    "got": "9.6.0",
    "husky": "2.2.0",
    "jest": "24.8.0",
    "lint-staged": "8.1.6",
    "nodemon": "1.19.0",
    "postinstall-postinstall": "2.0.0",
    "prettier": "1.17.1",
    "typescript": "3.4.5"
  }
}
